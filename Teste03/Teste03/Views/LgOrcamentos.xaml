                        </Picker>
                    </StackLayout>

                  
                  <Label x:Name="lbColetaOrcamento" Text="Coletas que possuem orçamentos" FontSize="15" FontAttributes="Bold" 
                         VerticalOptions="Start"   HorizontalOptions="Center"  IsVisible="true" Margin="10" />

