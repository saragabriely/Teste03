            <Grid x:Name="grdLogado" Grid.Row="2"  Grid.Column="0" Grid.ColumnSpan="4" IsVisible="false" >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition  Width="66" />
                    <ColumnDefinition  Width="66" />
                    <ColumnDefinition  Width="66" />
                    <ColumnDefinition  Width="66" />
                    <ColumnDefinition  Width="66" />
                </Grid.ColumnDefinitions>

